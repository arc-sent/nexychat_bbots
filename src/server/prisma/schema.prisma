generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "windows", "debian-openssl-3.0.x" , "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @unique
  name String
  age Int
  premium Boolean @default(false)
  gender Boolean @default(false)
  searchGender Boolean @default(true) 
  rating Float @default(10.0)
  ratingCount Int @default(0)
  ratingSum   Float @default(0)
  coinViewed Boolean @default(true)
  ratingViewed Boolean @default(true)
  storyChats Story[]
}

model Story {
  id          Int      @id @default(autoincrement())
  userId      String   
  storyId     String   
  user        User  @relation(fields: [userId], references: [id])
}
